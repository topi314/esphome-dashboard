<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    #root {
        display: flex;
        flex-direction: column;
        height: 100%;
        width: 100%;
    }

    #page {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex-grow: 1;
    }

    .content {
        justify-self: stretch;
    }

    #footer {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .dot {
        height: 25px;
        width: 25px;
        border-radius: 50%;
        border: 1px solid black;
        display: inline-block;
        margin-right: 10px;
    }

    .filled {
        background-color: black;
    }
</style>
<div id="root">
    {{ template "page" .Page }}
	<div id="footer">
        {{ range $i := (seq .PageCount) }}
            {{ if eq $i $.PageIndex }}
				<span class="dot filled"></span>
            {{ else }}
				<span class="dot"></span>
            {{ end }}
        {{ end }}
	</div>
</div>